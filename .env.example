# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=INFO

# Worker Configuration
WORKER_ID=worker-1
CHAIN_ID=5000

# RPC Polling Intervals (seconds)
POLL_INTERVAL_PROBE=30
POLL_INTERVAL_SCANNER=2
POLL_INTERVAL_ROLLUP=60
POLL_INTERVAL_ALERTS=30

# Worker Concurrency
MAX_CONCURRENT_PROBES=3
BLOCK_BATCH_SIZE=10
TRACE_QUEUE_SIZE=100
MAX_TRACES_PER_MINUTE=10

# Retry Configuration
RPC_TIMEOUT_DEFAULT=5
RPC_TIMEOUT_TRACE=10
MAX_RETRIES=3
BACKOFF_BASE=2

# Frontend Configuration (for web app)
PUBLIC_API_URL=http://localhost:8000
PUBLIC_CHAIN_ID=5000
PUBLIC_EXPLORER_URL=https://explorer.mantle.xyz
